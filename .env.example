# DNA-Origami-AutoEncoder Environment Configuration
# Copy this file to .env and configure for your local environment

# =============================================================================
# General Configuration
# =============================================================================

# Project settings
PROJECT_NAME=dna-origami-autoencoder
PROJECT_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Data directories
DATA_ROOT_DIR=./data
RAW_DATA_DIR=${DATA_ROOT_DIR}/raw
PROCESSED_DATA_DIR=${DATA_ROOT_DIR}/processed
EXTERNAL_DATA_DIR=${DATA_ROOT_DIR}/external
SYNTHETIC_DATA_DIR=${DATA_ROOT_DIR}/synthetic

# Model directories
MODELS_DIR=./models
TRAINED_MODELS_DIR=${MODELS_DIR}/trained
CHECKPOINTS_DIR=${MODELS_DIR}/checkpoints

# Results directories
RESULTS_DIR=./results
FIGURES_DIR=${RESULTS_DIR}/figures
REPORTS_DIR=${RESULTS_DIR}/reports
EXPERIMENTS_DIR=./experiments

# =============================================================================
# Computational Resources
# =============================================================================

# CPU configuration
MAX_WORKERS=4
PARALLEL_JOBS=2

# GPU configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
MIXED_PRECISION=true

# Memory limits
MAX_MEMORY_GB=8
CACHE_SIZE_GB=2

# =============================================================================
# Machine Learning Configuration
# =============================================================================

# Training settings
BATCH_SIZE=32
LEARNING_RATE=1e-4
MAX_EPOCHS=100
EARLY_STOPPING_PATIENCE=10
VALIDATION_SPLIT=0.2

# Model settings
RANDOM_SEED=42
MODEL_REGISTRY_PATH=${MODELS_DIR}/registry

# Hyperparameter optimization
OPTUNA_STORAGE_URL=sqlite:///optuna.db
OPTUNA_STUDY_NAME=dna-origami-ae-hpo

# =============================================================================
# DNA Encoding Configuration
# =============================================================================

# Encoding parameters
DEFAULT_ENCODING_METHOD=base4
ERROR_CORRECTION_METHOD=reed_solomon
ERROR_CORRECTION_REDUNDANCY=0.3

# Biological constraints
MIN_GC_CONTENT=0.4
MAX_GC_CONTENT=0.6
MAX_HOMOPOLYMER_LENGTH=4
FORBIDDEN_SEQUENCES=GGGG,CCCC,AAAA,TTTT

# Sequence optimization
OPTIMIZE_SECONDARY_STRUCTURE=true
TARGET_MELTING_TEMP_RANGE=55,65

# =============================================================================
# Origami Design Configuration
# =============================================================================

# Design parameters
DEFAULT_SCAFFOLD_LENGTH=7249  # M13mp18 standard
DEFAULT_STAPLE_LENGTH=32
CROSSOVER_SPACING=21
ORIGAMI_LATTICE_TYPE=honeycomb

# Shape library
SHAPE_LIBRARY_PATH=./data/external/shapes
CUSTOM_SHAPES_PATH=./data/processed/custom_shapes

# Design optimization
MINIMIZE_STAPLE_CONFLICTS=true
OPTIMIZE_FOLDING_ENERGY=true
VALIDATE_DESIGN=true

# =============================================================================
# Molecular Simulation Configuration
# =============================================================================

# Simulation engine
MD_ENGINE=oxdna2
FORCE_FIELD=oxDNA2
SIMULATION_PRECISION=mixed  # single, double, mixed

# Simulation parameters
DEFAULT_TEMPERATURE=300  # Kelvin
DEFAULT_SALT_CONCENTRATION=0.5  # Molar
DEFAULT_TIME_STEPS=1000000
SAVE_INTERVAL=10000

# GPU simulation
GPU_SIMULATION=true
SIMULATION_BATCH_SIZE=10
GPU_MEMORY_POOL_FRACTION=0.9

# Output settings
TRAJECTORY_FORMAT=h5md
COMPRESS_TRAJECTORIES=true
KEEP_INTERMEDIATE_FILES=false

# =============================================================================
# Neural Network Decoder Configuration
# =============================================================================

# Architecture settings
TRANSFORMER_HIDDEN_DIM=512
TRANSFORMER_NUM_HEADS=8
TRANSFORMER_NUM_LAYERS=12
POSITION_ENCODING=3d_sinusoidal
ATTENTION_TYPE=sparse_3d

# Training configuration
OPTIMIZER=adamw
WEIGHT_DECAY=0.01
GRADIENT_CLIP_NORM=1.0
SCHEDULER=cosine_annealing

# Data augmentation
USE_DATA_AUGMENTATION=true
NOISE_AUGMENTATION_LEVEL=0.1
GEOMETRIC_AUGMENTATION=true

# =============================================================================
# Wet-Lab Integration
# =============================================================================

# Protocol generation
GENERATE_PROTOCOLS=true
PROTOCOL_FORMAT=pdf,opentrons
SAFETY_LEVEL=BSL1

# Equipment configuration
PLATE_FORMAT=96_well
PIPETTE_VOLUME_RANGE=0.1,1000  # μL
INCUBATION_TEMPERATURE=37  # °C
ANNEALING_CURVE=standard

# Vendor preferences (comma-separated)
DNA_SYNTHESIS_VENDORS=IDT,Twist,GenScript
REAGENT_VENDORS=NEB,Thermo,Sigma
EQUIPMENT_VENDORS=Opentrons,Hamilton,Beckman

# Quality control
QC_ENABLED=true
QC_REPLICATES=3
QC_THRESHOLD_ACCURACY=0.95

# =============================================================================
# External Service Configuration
# =============================================================================

# Cloud storage (if used)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_S3_BUCKET=dna-origami-ae-data
# AWS_REGION=us-west-2

# Google Cloud (if used)
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_STORAGE_BUCKET=dna-origami-ae-data

# Database configuration (if used)
# DATABASE_URL=postgresql://user:password@localhost:5432/dna_origami_ae
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging configuration
LOG_FORMAT=json  # json, text
LOG_FILE_PATH=./logs/dna-origami-ae.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Experiment tracking
# WANDB_PROJECT=dna-origami-autoencoder
# WANDB_ENTITY=your_wandb_entity
# WANDB_API_KEY=your_wandb_api_key_here

# MLflow (if used)
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=dna-origami-ae

# =============================================================================
# Development and Testing
# =============================================================================

# Testing configuration
TEST_DATA_SIZE=1000  # Number of samples for test datasets
PYTEST_WORKERS=auto
COVERAGE_THRESHOLD=0.8

# Code quality
BLACK_LINE_LENGTH=88
FLAKE8_MAX_LINE_LENGTH=88
MYPY_STRICT_MODE=true

# Documentation
DOCS_BUILD_DIR=./docs/_build
DOCS_SOURCE_DIR=./docs
DOCS_AUTO_BUILD=true

# Pre-commit hooks
ENABLE_PRE_COMMIT=true
AUTO_FIX_FORMATTING=true

# =============================================================================
# Security Configuration
# =============================================================================

# API security (if applicable)
# SECRET_KEY=your_secret_key_here_use_strong_random_value
# JWT_SECRET_KEY=your_jwt_secret_here
# API_KEY_EXPIRY_HOURS=24

# Data encryption (if needed)
# DATA_ENCRYPTION_KEY=your_encryption_key_here
# ENCRYPT_SENSITIVE_DATA=true

# Access control
ENABLE_AUTH=false  # Set to true for production
DEFAULT_USER_ROLE=researcher

# =============================================================================
# Performance Tuning
# =============================================================================

# Caching configuration
ENABLE_CACHING=true
CACHE_BACKEND=memory  # memory, redis, memcached
CACHE_TTL_SECONDS=3600

# Parallel processing
JOBLIB_BACKEND=threading  # threading, multiprocessing, loky
DASK_SCHEDULER=threads  # threads, processes, distributed

# Memory optimization
LAZY_LOADING=true
CHUNK_SIZE=1000
MEMORY_MAPPING=true

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily  # hourly, daily, weekly
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./backups

# Recovery settings
AUTO_RECOVERY=true
CHECKPOINT_FREQUENCY=1000  # steps
SAVE_BEST_MODEL=true

# =============================================================================
# Feature Flags
# =============================================================================

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_3D_VISUALIZATION=true
ENABLE_REAL_TIME_MONITORING=false
ENABLE_ADVANCED_ANALYTICS=true

# Beta features
ENABLE_MULTI_MODAL_LEARNING=false
ENABLE_FEDERATED_LEARNING=false
ENABLE_QUANTUM_SIMULATION=false

# =============================================================================
# Miscellaneous
# =============================================================================

# Timezone
TIMEZONE=UTC

# Locale
LOCALE=en_US.UTF-8

# Contact information
ADMIN_EMAIL=admin@example.com
SUPPORT_EMAIL=support@example.com

# Version checking
CHECK_FOR_UPDATES=true
UPDATE_CHANNEL=stable  # stable, beta, dev